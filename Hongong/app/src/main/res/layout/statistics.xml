<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@android:id/tabhost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></TabWidget>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/StudyTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="20sp"
                    android:gravity="center"
                    android:text="오늘의 총 공부 시간"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dayTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:gravity="center"
                    android:text="-시간 -분 -초"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="20sp"
                    android:gravity="center"
                    android:text="조금 더 오래 공부해봅시다!"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/yesTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50sp"
                    android:layout_marginBottom="20sp"
                    android:gravity="center"
                    android:text="어제의 공부 시간 : -시간 -분 -초"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvTime2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="20sp"
                    android:gravity="center"
                    android:text="어제보다"
                    android:textSize="34sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ToDo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="20sp"
                    android:gravity="center"
                    android:text="오늘의 일정 완료 여부"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dayDo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:gravity="center"
                    android:text="아직 미완료"
                    android:textSize="48sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Rating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="20sp"
                    android:gravity="center"
                    android:text="오늘의 기분"
                    android:textSize="20sp" />

                <RatingBar
                    android:id="@+id/dayRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:text="오늘은"
                    android:textSize="34sp"
                    android:textColor="#7B57A9"/>

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="20sp"
                    android:gravity="center"
                    android:text="-한 편입니다!"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/yesRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:text="어제에 비해"
                    android:textColor="#7B57A9"
                    android:textSize="34sp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</TabHost>